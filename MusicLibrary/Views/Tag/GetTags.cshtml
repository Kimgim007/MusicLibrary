@using DTO.Entity
@model List<TagDTO>


<head>
	<style>
		body {
			font-family: tahoma;
			height: 100vh;
			background-image: url(https://picsum.photos/g/3000/2000);
			background-size: cover;
			background-position: center;
		}

		a:link, a:visited {
			background-color: #808080;
			color: white;
			padding: 15px 25px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
		}

		a:hover, a:active {
			background-color: #000000;
	</style>
</head>

<body>
	<h1 style="text-align:center">
		Теги
	</h1>

	<table class="table">

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.TagName @Html.ActionLink("Remove Tag","RemoveTag","Tag",new{@id = item.TagId})
				</td>
			</tr>
		}
	</table>
</body>


